#!/usr/bin/env bash

set -ex

rm -f test.dat test.echo test.out
@CMAKE_BINARY_DIR@/app/miniFAVOR << EOF
test.in
EOF
diff -b test.echo.orig test.echo

awk 'NF' test.out > test.out.no-blank-lines
awk 'NF' test.dat > test.dat.no-blank-lines

numdiff -r 1.0e-6 test.out.orig test.out.no-blank-lines
numdiff -r 1.0e-6 test.dat.orig test.dat.no-blank-lines
